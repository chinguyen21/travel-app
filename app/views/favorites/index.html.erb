<h1>My Favorites</h1>
<hr/>
<% if @favorites.length > 0 %>
<% @favorites.each do |favorite|%>
    <li><%= link_to favorite.destination.name, destination_path(favorite.destination) %></li>
<% end %>
<% else %>
<b>You don't have any favorites yet!</b>
<% end %>
<hr/>
<%= button_to "Back to Homepage", user_path(session[:id]), method: :get %>