<h1>Login Page</h1>
<hr/>
</br>
<% if flash[:errors] %>
<li style="color: red;"> <%= flash[:errors] %> </li>
<% end %>

<%= form_for @user, :url => '/login' do | f | %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    </br></br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    </br></br>
    <%= f.submit "Login" %>
    <% end %>