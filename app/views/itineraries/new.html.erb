<h1> Create Itinerary </h1>

<% if flash[:errors]%>
  <% flash[:errors].each do |error|%>
  <li style="color: red"><%= error%></li>
  <%end%>
<%end %>

<%= form_for @itinerary do |f|%>
<%= f.label :name%>
<%= f.text_field :name%><br>
<%= f.label :user_id%>
<%= f.collection_select :user_id, User.all, :id, :name %><br>
<%= f.submit "Create Itinerary"%>

<%end%>