<h1> Add Entry </h1>
<hr/>
<% if flash[:errors]%>
  <% flash[:errors].each do |error|%>
  <li style="color: red"><%= error%></li>
  <%end%>
<%end %>

<%= form_for @entry do |f|%>
<%= f.label :destination_id%>
<%= f.collection_select :destination_id, Destination.all, :id, :name %><br>
<%= f.label :itinerary_id%>
<%= f.collection_select :itinerary_id, Itinerary.all, :id, :name %><br>
<%= f.label :date%><br>
<%= f.date_field :date%><br>
<%= f.submit "Add Entry"%>

<%end%>