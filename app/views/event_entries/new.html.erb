<h1> Add Event to Itinerary </h1>

<% if flash[:errors]%>
  <% flash[:errors].each do |error|%>
  <li style="color: red"><%= error%></li>
  <%end%>
<%end %>

<%= form_for @event_entry do |f|%>
<%= f.label :event_id%>
<%= f.collection_select :event_id, Event.all, :id, :name %><br>
<%= f.label :entry_id%>
<%= f.collection_select :entry_id, Entry.all, :id, :itinerary_id %><br>
<%= f.submit "Add Event"%>

<%end%>